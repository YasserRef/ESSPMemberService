@using Microsoft.AspNetCore.Html
@using System.Text.RegularExpressions
@model IEnumerable<ESSPMemberService.Models.Tables.T_NEWS>

@{
    ViewData["Title"] = "الاخبار";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>الاخبار</h1>

<p>
    <a asp-action="Create" class="btn btn-success">إضافة جديد</a>
</p>

<!-- نموذج البحث -->
<form asp-action="Show" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="text"
                   name="title"
                   value="@ViewBag.SearchWords"
                   class="form-control"
                   placeholder="بحث بعنوان الخبر أو كلمات">
        </div>

        <div class="col-md-3">
            <input type="date"
                   name="fromDate"
                   value="@ViewBag.FromDate"
                   class="form-control"
                   placeholder="من تاريخ">
        </div>

        <div class="col-md-3">
            <input type="date"
                   name="toDate"
                   value="@ViewBag.ToDate"
                   class="form-control"
                   placeholder="إلى تاريخ">
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">بحث</button>
        </div>
    </div>
</form>

<!-- جدول الأخبار -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.F_TITLE)</th>
            <th>@Html.DisplayNameFor(model => model.F_CONTENT)</th>
            <th>@Html.DisplayNameFor(model => model.F_NAME)</th>
            <th>@Html.DisplayNameFor(model => model.F_CREATED_DATE)</th>
            <th>@Html.DisplayNameFor(model => model.F_ACTIVE)</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@HighlightWords(item.F_TITLE, ViewBag.SearchWords as string)</td>
                <td>@HighlightWords(item.F_CONTENT, ViewBag.SearchWords as string)</td>
                <td>@Html.DisplayFor(modelItem => item.F_NAME)</td>
                <td>@item.F_CREATED_DATE?.ToString("yyyy-MM-dd")</td>
                <td>
                    <input type="checkbox" class="form-check-input" disabled @(item.F_ACTIVE == 1 ? "checked" : "") />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.F_ID">تعديل</a> |
                    <a asp-action="Details" asp-route-id="@item.F_ID">تفاصيل</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Razor Helper لتسليط الضوء على الكلمات -->
@functions {
    public HtmlString HighlightWords(string text, string search)
    {
        if (string.IsNullOrWhiteSpace(search) || string.IsNullOrWhiteSpace(text))
            return new HtmlString(text ?? "");

        // تقسيم البحث إلى كلمات منفصلة
        var words = search.Split(' ', StringSplitOptions.RemoveEmptyEntries)
                          .Select(w => Regex.Escape(w));

        string pattern = string.Join("|", words);

        // استبدال كل كلمة بمحدد <mark>
        var highlighted = Regex.Replace(text, pattern, m => $"<mark>{m.Value}</mark>", RegexOptions.IgnoreCase);

        return new HtmlString(highlighted);
    }
}
