@model ESSPMemberService.Models.Tables.T_NEWS

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container my-5">
    <div class="news-card shadow-lg rounded-4 overflow-hidden">
        <div class="row g-0">
            <!-- Image Section -->
            <div class="col-md-6 news-image-wrapper">
                <img src="@Html.DisplayFor(model => model.F_IMAGE_URL)"
                     alt="@Html.DisplayFor(model => model.F_TITLE)"
                     class="img-fluid w-100 h-100 object-fit-cover"
                     onerror="this.src='/images/no-image.png'" />
            </div>

            <!-- Content Section -->
            <div class="col-md-6 p-4 news-content">
                <div class="news-meta mb-3 text-muted small d-flex justify-content-between">
                    <span>
                        <i class="bi bi-calendar3"></i>
                        @{
                            var c = new System.Globalization.CultureInfo("ar-EG");
                            c.DateTimeFormat.Calendar = new System.Globalization.GregorianCalendar();

                            // Safely format the date
                            string formattedDate = Model.F_CREATED_DATE.HasValue
                            ? Model.F_CREATED_DATE.Value.ToString("dd MMMM yyyy", c)
                            : "";
                        }
                        @formattedDate
                    </span>

                    <span>
                        <i class="bi bi-person"></i>
                        @Html.DisplayFor(model => model.F_NAME)
                    </span>
                </div>

                <h2 class="news-title mb-3">
                    @Html.DisplayFor(model => model.F_TITLE)
                </h2>

                <p class="news-description fs-5 text-secondary">
                    @Html.DisplayFor(model => model.F_CONTENT)
                </p>

                <div class="mt-4">
                    <a asp-action="AllNews" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> العودة إلى الأخبار
                    </a>
                </div>
            </div>
        </div>
    </div>


<div>
        <a asp-action="AllNews">الرجوع الى صفحة الاخبار</a>
</div>




</div>



