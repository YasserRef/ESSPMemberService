@model ESSPMemberService.Models.Tables.T_NEWS

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>تعديل الخبر</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">

            @* مهم جدًا *@
            <input type="hidden" asp-for="F_ID" />
            <input type="hidden" asp-for="F_IMAGE_URL" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="F_NAME" class="control-label"></label>
                <input asp-for="F_NAME" class="form-control" />
                <span asp-validation-for="F_NAME" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="F_TITLE" class="control-label"></label>
                <input asp-for="F_TITLE" class="form-control" />
                <span asp-validation-for="F_TITLE" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="F_CONTENT" class="control-label"></label>
                <textarea asp-for="F_CONTENT" class="form-control"></textarea>
                <span asp-validation-for="F_CONTENT" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="F_ACTIVE" class="control-label"></label>
                <select asp-for="F_ACTIVE" class="form-control">
                    <option value="1">نشط</option>
                    <option value="0">غير نشط</option>
                </select>
                <span asp-validation-for="F_ACTIVE" class="text-danger"></span>
            </div>

            <hr />

            @* الصورة الحالية *@
            @if (!string.IsNullOrEmpty(Model.F_IMAGE_URL))
            {
                <div class="form-group">
                    <label>الصورة الحالية</label><br />
                    <img src="@Model.F_IMAGE_URL"
                         style="max-width:100%; margin-bottom:10px; border:1px solid #ccc;" />
                </div>
            }

            <div class="form-group">
                <label for="newImage">تغيير صورة الخبر (اختياري)</label>
                <input type="file" name="newImage" id="newImage"
                       class="form-control" accept="image/*" />
                <span id="newImageError" class="text-danger" style="display:none;"></span>
            </div>

            <img id="imagePreview"
                 style="display:none; max-width:100%; margin-top:10px; border:1px solid #ccc;" />

            <div class="form-group mt-3">
                <input type="submit" value="حفظ التعديلات" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">الرجوع إلى الأخبار</a>
</div>

@section Scripts {
    <script>
        document.getElementById("newImage").addEventListener("change", function () {
            const file = this.files[0];
            const preview = document.getElementById("imagePreview");
            const error = document.getElementById("newImageError");

            error.style.display = "none";
            preview.style.display = "none";

            if (!file) return;

            const allowedTypes = ["image/jpeg", "image/png", "image/jpg"];
            if (!allowedTypes.includes(file.type)) {
                error.innerText = "نوع الصورة غير مدعوم (jpg, png فقط)";
                error.style.display = "block";
                this.value = "";
                return;
            }

            const maxSize = 2 * 1024 * 1024;
            if (file.size > maxSize) {
                error.innerText = "حجم الصورة يجب ألا يزيد عن 2 ميجا";
                error.style.display = "block";
                this.value = "";
                return;
            }

            const reader = new FileReader();
            reader.onload = e => {
                preview.src = e.target.result;
                preview.style.display = "block";
            };
            reader.readAsDataURL(file);
        });
    </script>
}
