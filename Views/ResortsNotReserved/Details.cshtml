@model ESSPMemberService.ResortsNotReserved

@{
    ViewData["Title"] = "تفاصيل الوحدة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">

    <h1 class="mb-4">تفاصيل الوحدة</h1>

    <!-- ================= DETAILS ================= -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-sm-3 fw-bold">اسم المصيف</div>
                <div class="col-sm-9">@Model.HOLDAY_NAME</div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-3 fw-bold">الوحدة</div>
                <div class="col-sm-9">@Model.F_FLAT_DESC</div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-3 fw-bold">رقم الأسبوع</div>
                <div class="col-sm-9">@Model.F_WEEK</div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-3 fw-bold">سعر الأسبوع</div>
                <div class="col-sm-9">@Model.F_WEEKCOST</div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-3 fw-bold">التأمين</div>
                <div class="col-sm-9">@Model.F_INSURCOST</div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-3 fw-bold">من</div>
                <div class="col-sm-9">@Model.F_FROM</div>
            </div>

            <div class="row">
                <div class="col-sm-3 fw-bold">إلى</div>
                <div class="col-sm-9">@Model.F_TO</div>
            </div>
        </div>
    </div>

    <!-- ================= MEDIA SLIDER ================= -->
    @if ((Model.FlatPics != null && Model.FlatPics.Any()) ||
        (Model.FlatVideos != null && Model.FlatVideos.Any()))
    {
        <div class="card mb-4">
            <div class="card-body">

                <div id="mediaCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">

                        @{
                            bool isActive = true;
                        }

                        <!-- Images -->
                        @if (Model.FlatPics != null)
                        {
                            foreach (var pic in Model.FlatPics)
                            {
                                <div class="carousel-item @(isActive ? "active" : "")">
                                    <img src="@pic.FLAT_URL_PIC"
                                         class="d-block w-100"
                                         style="max-height:500px;object-fit:cover;" />
                                </div>
                                isActive = false;
                            }
                        }

                        <!-- Videos -->
                        @if (Model.FlatVideos != null)
                        {
                            foreach (var video in Model.FlatVideos)
                            {
                                <div class="carousel-item">
                                    <div class="ratio ratio-16x9">
                                        <iframe src="@video.FLAT_URL_PIC"
                                                allowfullscreen
                                                allow="autoplay; encrypted-media">
                                        </iframe>
                                    </div>
                                </div>
                            }
                        }

                    </div>

                    <button class="carousel-control-prev" type="button"
                            data-bs-target="#mediaCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>

                    <button class="carousel-control-next" type="button"
                            data-bs-target="#mediaCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>

            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            لا توجد صور أو فيديوهات لهذه الوحدة
        </div>
    }

    <!-- ================= BACK BUTTON ================= -->
    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">
            الرجوع إلى المصايف
        </a>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
