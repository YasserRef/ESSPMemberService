
<link href="~/assets/css/login.css" rel="stylesheet" />
@using (Html.BeginForm("Index", "V_MEMBER_INFO", FormMethod.Post, new { @class = "form-horizontal" }))
{
  
    <!-- Animated Background -->
    <div class="bg-animation">
        <div class="floating-shapes shape-1"></div>
        <div class="floating-shapes shape-2"></div>
        <div class="floating-shapes shape-3"></div>
        <div class="floating-shapes shape-4"></div>
    </div>

    <div class="login-container">
        <div class="login-card">
            <!-- Logo Section -->
            <div class="logo-section">
                <div class="logo">
                    <i class="fas fa-user-shield"></i>
                </div>
               
            </div>

            <!-- Login Form -->
            <form id="loginForm">
                <div class="form-group">
                    <label class="form-label">رقم القيد</label>
                    <div style="position: relative;">
                        @Html.TextBox("MemID", null, new { @class = "form-control" })                        
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">رقم الشعبة</label>
                    <div style="position: relative;">
                        @Html.TextBox("ClassID", null, new { @class = "form-control" })
                        </div>
                </div>

                <div class="form-options">
                    <div class="g-recaptcha" data-sitekey="6LfU_xMpAAAAADmXvZq0VqCVLIyJz3x6V8dUQeZ8"></div>

                </div>
                <div class="actions" style="text-align:center;">
                    <input type="submit" value="دخول" class="login-btn" style="text-align:center;"/>
                </div>
               
            </form>

          
        </div>
    </div>

   


   
}

<script type="text/javascript" src="https://www.google.com/recaptcha/api.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

