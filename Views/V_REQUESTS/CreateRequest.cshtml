<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#F_MEM_ID").on("blur", function () {  // Trigger on losing focus
            var memberId = $(this).val();
            if (memberId) {
                $.ajax({
                    url: "/V_MEMBER_INFO/GetMemberName",
                    type: "GET",
                    data: { id: memberId },
                    success: function (response) {
                        if (response.success) {
                            $("#F_MEM_NAME").val(response.memberName);
                        } else {
                            $("#F_MEM_NAME").val(""); // Clear if not found
                        }
                    },
                    error: function () {
                        alert("Error retrieving member name.");
                    }
                });
            }
        });
    });
</script>

